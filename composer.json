{
  "name":         "santacompanha/testuals",
  "description":  "Scenario-oriented BDD framework for PHP 5.3",
  "keywords":     ["test", "testing", "development", "documentation"],
  "homepage":     "http://www.santacompanha.com/testuals",
  "type":         "library",
  "license":      "MIT",
  "authors":      [
    {
      "name":      "Jaime Lopez",
      "email":     "jeims.lopez@gmail.com",
      "homepage":  "http://www.santacompanha.com"
    }
  ],

  "require": {
    "php":                          "^5.6 || ^7.0",
    "symfony/console":              "^3.1",
    "symfony/config":               "^3.1",
    "symfony/dependency-injection": "^3.1",
    "symfony/event-dispatcher":     "^3.1",
    "symfony/yaml":                 "^3.1",
    "symfony/finder":               "^3.1",
    "doctrine/instantiator":        "^1.0",
    "beberlei/assert":              "^2.6"
  },

  "require-dev": {
    "symfony/process":              "~2.5|~3.0",
    "phpunit/phpunit":              "~5.6"
  },

  "autoload": {
    "psr-4": {
      "Santa\\Testuals\\": "src/"
    }
  },

  "bin": ["bin/testuals"]
}
